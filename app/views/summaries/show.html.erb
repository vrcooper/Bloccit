<h1><%= @summary.name %></h1>

<% if policy(@summary).update? %>
  <%= link_to "Edit Summary", edit_summary_path, class: 'btn btn-success' %>
  <% end %>

  <div class="row">
    <div class="col-md-8">
      <p class="lead"><%= @summary.description %></p>
      <% @posts.each do |post| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to post.title, [@summary, post] %>
          </h4>
          <small>
            submitted <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.name %><br>
            <%= post.comments.count %> Comments
          </small>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-md-4">
      <% if policy(Post.new).create? %>
      <%= link_to "New Post", new_summary_post_path(@summary), class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
  
